#:import Window kivy.core.window.Window


<Profile>:
    name: 'profile'
    person:person
    email:email
    FloatLayout:
        size_hint:(1,1)
        FitImage:
            source: ""
            radius: [0,]

        MDFillRoundFlatButton:
            text: "main page"
            custom_color: 0, 1, 0, 1
            text_color: 0, 1, 0, 1
            line_color: 0, 0, 1, 1
            size_hint:.1,.05
            pos_hint:{'x':.01,'y':.93}
            on_press:
                app.click_sound
                app.progress()
                app.switch_screen('mainpage')

        MDLabel:
            text: "PROFILE PAGE "
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 0, 1, 1
            size_hint:.1,.1
            pos_hint:{'x':.45,'y':.80}

        MDCard:
            orientation: "vertical"
            padding: "8dp"
            size_hint: None, None
            size: "280dp", "280dp"
            pos_hint: {"center_x": .26, "center_y": .5}

            MDLabel:
                id:person
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 0, 1, 1
                pos_hint:{'x':.1,'y':.63}

            MDSeparator:
                height: "1dp"

            MDLabel:
                id:email
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 0, 1, 1
                pos_hint:{'x':.1,'y':.53}

        Label:
            text : "NAME: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0, "y":0.55}
            color:1,0,0,1


        MDFillRoundFlatButton:
            text: "update profile"
            custom_color: 0, 1, 0, 1
            text_color: 0, 1, 0, 1
            line_color: 0, 0, 1, 1
            size_hint:.1,.05
            pos_hint:{'x':.16,'y':.2}
            on_press:
                app.click_sound
                root.Updateprofile()
                
                



        MDFillRoundFlatButton:
            text: "delete profile"
            custom_color: 0, 1, 0, 1
            text_color: 0, 1, 0, 1
            line_color: 0, 0, 1, 1
            size_hint:.1,.05
            pos_hint:{'x':.27,'y':.2}
            on_press:
                app.click_sound
                root.Message()
                
                


        


        

        


        Label:
            text : "EMAIL: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0, "y":0.40}
            color:1,0,0,1



            
                


    
        
        

        MDFillRoundFlatButton:
            text: "settings"
            custom_color: 0, 1, 0, 1
            text_color: 0, 1, 0, 1
            line_color: 0, 0, 1, 1
            size_hint:.1,.05
            pos_hint:{'x':.78,'y':.93}
            on_press:
                app.click_sound
                app.progress()
                app.switch_screen('settings')   
 
        

        MDFillRoundFlatButton:
            text: "logout"
            custom_color: 0, 1, 0, 1
            text_color: 0, 1, 0, 1
            line_color: 0, 0, 1, 1
            size_hint:.1,.05
            pos_hint:{'x':.89,'y':.93}
            on_press:
                app.click_sound
                app.progress()
                app.switch_screen('login')  

        
           
    
        
            

            

   
           

                

               
                  


